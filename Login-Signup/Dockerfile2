FROM ubuntu:18.04
RUN apt-get upgrade && apt-get update && apt-get install -y nodejs && apt-get install -y npm && apt-get install -y git
CMD git clone https://github.com/airavata-courses/Envy.git &&  cd Envy && git pull && git checkout develop-release-branch && cd Login-Signup && npm install
EXPOSE 3001
CMD ["npm","start"]
